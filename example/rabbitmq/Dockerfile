FROM  byrnedo/alpine-curl
RUN curl http://www.rabbitmq.com/community-plugins/v3.6.x/rabbitmq_delayed_message_exchange-0.0.1.ez > /tmp/rabbitmq_delayed_message_exchange-0.0.1.ez

FROM rabbitmq:3.6.14-management-alpine
COPY --from=0 /tmp/rabbitmq_delayed_message_exchange-0.0.1.ez $RABBITMQ_HOME/plugins/rabbitmq_delayed_message_exchange-0.0.1.ez
RUN rabbitmq-plugins enable --offline rabbitmq_delayed_message_exchange